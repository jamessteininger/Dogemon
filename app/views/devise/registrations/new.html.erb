<div class=" col-md-4 col-md-offset-4">
<div class="panel panel-primary">
  <div class="panel-heading">Sign up
  </div><div class="panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control'  %></div>

<div><%= f.label :dogetag %> <i>(this will be your gamer tag)</i><br />
  <%= f.text_field :dogetag, class: 'form-control'  %></div>

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %></div>
   <div class="profile"><%= f.label :profile_icon %><br />
    <%= radio_button_tag(:imageurl, "http://i2.kym-cdn.com/photos/images/newsfeed/000/612/868/fa8.gif" ) %>
     <%= image_tag("http://i2.kym-cdn.com/photos/images/newsfeed/000/612/868/fa8.gif",height:55) %>
    <%= radio_button_tag(:imageurl, "http://i1.kym-cdn.com/entries/icons/square/000/013/564/aP2dv.gif") %>
     <%= image_tag("http://i1.kym-cdn.com/entries/icons/square/000/013/564/aP2dv.gif",height:55) %>
    <%= radio_button_tag(:imageurl, "http://i.imgur.com/IaLG69W.jpg") %>
    <%= image_tag("http://i.imgur.com/IaLG69W.jpg",height:55) %>
    <%= radio_button_tag(:imageurl, "http://www.stuffcoins.com/images/items/2765.gif") %>
    <%= image_tag("http://www.stuffcoins.com/images/items/2765.gif",height:55) %>
  <%= f.hidden_field :coin, value: 2000 %>
  <%= f.hidden_field :coin_made, value: 0 %>
  <div><br><%= f.submit "Sign up", class: 'btn btn-primary btn-block' %></div>
<% end %>

<%= render "devise/shared/links" %>
  </div></div>